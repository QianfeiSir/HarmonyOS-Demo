<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="1000vp"
    ohos:width="match_parent"
    ohos:background_element="#FF000000"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:sleep_moon_img"
        ohos:height="46vp"
        ohos:width="46vp"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="11vp"
        ohos:image_src="$media:Media_ic_icon_moon"/>

    <Text
        ohos:height="19.5vp"
        ohos:width="match_parent"
        ohos:alpha="0.66"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:sleep"
        ohos:text_alignment="center"
        ohos:text_color="$color:sleep_text_white"
        ohos:text_size="16vp"/>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="65vp"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp">

        <Text
            ohos:id="$+id:sleep_hour_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:text="$string:dash"
            ohos:text_alignment="center"
            ohos:text_color="$color:sleep_text_blue"
            ohos:text_size="58vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.66"
            ohos:bottom_padding="9.5vp"
            ohos:layout_alignment="bottom"
            ohos:left_margin="2vp"
            ohos:text="$string:hour"
            ohos:text_color="$color:sleep_text_white"
            ohos:text_size="16vp"
            />

        <Text
            ohos:id="$+id:sleep_min_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:left_margin="2vp"
            ohos:text="$string:double_dash"
            ohos:text_alignment="center"
            ohos:text_color="$color:sleep_text_blue"
            ohos:text_size="58vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.66"
            ohos:bottom_padding="9.5vp"
            ohos:layout_alignment="bottom"
            ohos:left_margin="2vp"
            ohos:text="$string:minute"
            ohos:text_color="$color:sleep_text_white"
            ohos:text_size="16vp"
            />
    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="25vp"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal"
        ohos:top_margin="20.5vp">

        <Text
            ohos:height="19.5vp"
            ohos:width="match_content"
            ohos:alpha="0.66"
            ohos:bottom_margin="1vp"
            ohos:text="$string:goal"
            ohos:text_alignment="bottom"
            ohos:text_color="$color:sleep_text_white"
            ohos:text_size="16vp"
            />

        <Text
            ohos:id="$+id:sleep_goal_text"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:bottom_padding="2vp"
            ohos:left_margin="2vp"
            ohos:text="$string:target_sleep_time"
            ohos:text_color="$color:sleep_text_blue"
            ohos:text_size="21vp"
            ohos:text_weight="600"
            />

        <Text
            ohos:height="19.5vp"
            ohos:width="match_content"
            ohos:alpha="0.66"
            ohos:left_margin="2vp"
            ohos:text="$string:hour"
            ohos:text_color="$color:sleep_text_white"
            ohos:text_size="16vp"
            />
    </DirectionalLayout>
</DirectionalLayout>
